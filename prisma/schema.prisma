datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Option {
  id         Int    @id @default(autoincrement())
  field_id   Int
  label      String    @db.VarChar(255)
  value      String    @db.VarChar(255)
  created_at DateTime
  updated_at DateTime
  field      Field     @relation("fieldsToOptions", fields: [field_id], references: [id])

  @@index([field_id])
}

model Field {
  id            Int      @id @default(autoincrement())
  form_id       Int
  name          String      @db.VarChar(255)
  placeholder   String      @db.VarChar(255)
  required      Boolean     @db.TinyInt
  is_calculated Boolean     @db.TinyInt
  formula       String?     @db.VarChar(255)
  created_at    DateTime
  updated_at    DateTime
  form          Form        @relation("fieldsToForms", fields: [form_id], references: [id])
  options       Option[]    @relation("fieldsToOptions")
  responses     Response[]  @relation("fieldsToResponses")

  @@index([form_id])
}

model Form {
  id          Int      @id @default(autoincrement())
  name        String      @db.VarChar(255)
  description String?     @db.VarChar(255)
  created_at  DateTime
  updated_at  DateTime
  fields      Field[]     @relation("fieldsToForms")
  responses   Response[]  @relation("formsToResponses")
  access      Access[]

}

model Response {
  id         Int    @id @default(autoincrement())
  form_id    Int
  field_id   Int
  user_id    Int
  value      String    @db.VarChar(255)
  created_at DateTime
  updated_at DateTime
  sede_id    Int
  form       Form      @relation("formsToResponses", fields: [form_id], references: [id])
  field      Field     @relation("fieldsToResponses", fields: [field_id], references: [id])
  user       User      @relation("usersToResponses", fields: [user_id], references: [id])
  sede       Sede      @relation("sedesToResponses", fields: [sede_id], references: [id])

  @@index([form_id])
  @@index([field_id])
  @@index([user_id])
  @@index([sede_id])
}

model Sede {
  id        Int        @id @default(autoincrement())
  name      String     @db.VarChar(45)
  responses Response[] @relation("sedesToResponses")
}

model Access {
  id           Int        @id @default(autoincrement())
  type_user_id Int
  forms_id     Int
  type_user    TypeUser   @relation(fields: [type_user_id], references: [id])
  form         Form       @relation(fields: [forms_id], references: [id])

  @@index([type_user_id])
  @@index([forms_id])
}

model TypeUser {
  id        Int      @id @default(autoincrement())
  type_name String   @db.VarChar(45)
  users     User[]
  access    Access[]
}

model User {
  id           Int      @id @default(autoincrement())
  name         String      @db.VarChar(255)
  email        String      @unique
  telefono     String      @db.VarChar(45)
  password     String      @db.VarChar(255)
  type_user_id Int
  responses    Response[]  @relation("usersToResponses")
  type_user    TypeUser    @relation(fields: [type_user_id], references: [id])

  @@index([type_user_id])
}
